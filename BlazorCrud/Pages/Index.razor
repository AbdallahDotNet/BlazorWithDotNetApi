@page "/"
@inherits IndexBase

<NavLink class="btn btn-success" href="add" style="color:#fff" Match="NavLinkMatch.All">Add</NavLink>
<hr />
@if (CarsList.Count() < 1 || CarsList == null)
{
    <div class="alert alert-danger">no items</div>
}
else
{
    @foreach (var item in CarsList)
    {
        <DisplayCar carViewModel="item" refillCarList="Refill"></DisplayCar>
    }
}