@inherits DeleteBase

@if (showModal) {
    <div class="modal-dialog" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="(() => ChangeShowModalState(false))">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Do you wan't to delete this
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="(() => ChangeShowModalState(false))">Close</button>
                    <button type="button" class="btn btn-danger" @onclick="(() => ChangeShowModalState(true))">Confirm Delete</button>
                </div>
            </div>
        </div>
    </div>
}